<h1>Your Disciplines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.name %></td>
        <td><%= discipline.school_class.ano %></td>
        <% if current_user.teacher? %>
          <td><%= link_to 'Show', discipline %></td>
          <td><%= link_to 'Edit', edit_discipline_path(discipline) %></td>
          <td><%= link_to 'Destroy', discipline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% elsif current_user.student? %>
          <% unless discipline.students.include? current_user%>
            <td> <%= link_to 'Join', join_discipline_path(discipline) %> </td>
          <% else %>
            <td> <%= link_to 'SAUHSA', join_discipline_path(discipline) %> </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.teacher? %>
  <%= link_to 'New Discipline', new_discipline_path %>
<% end %>
