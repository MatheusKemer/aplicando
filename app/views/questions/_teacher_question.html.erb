<h2>- <%= question.pergunta %></h2>
<%= I18n.t("exam.discipline") %>: <%= question.discipline.name %>
<br><br>
<% if @enable_teacher %>
  <%= I18n.t("teacher.teacher") %>:
  <%= link_to question.teacher.name, teacher_path(question.teacher.id) %>
  <br><br>
<% end %>
<%= I18n.t("question.alternatives") %>
<ul>
    <% question.answers.each do |answer| %>
	  	<li> <h3> <%=answer%> <%= "*" if question.correct == answer%> </h3> </li>
    <% end %>
</ul>

<br />