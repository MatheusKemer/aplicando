<style type="text/css">
  .my_class .input {background-color: black}
</style>

<%= I18n.t("question.total_likes") %>: <%= question.likes %>
<br />
<% if current_user.teacher?%>
  <%= question.likers%>
  <%= button_to I18n.t("question.like"), like_path, params: {question: question} %>
<% end %>

<%= I18n.t("question.total_dislikes") %>: <%= question.dislikes %>
<br />
<% if current_user.teacher? %>
  <%= question.dislikers%>
  <%= button_to I18n.t("question.dislike"), dislike_path, params: {question: question} %>
<% end %>

<%#Like AJAX%

<%= button_tag "LIKE", :id => "like", :class => "like" %>

<script type="text/javascript">
  function func(){
    $.ajax({
      url: like_path
      type: "POST"
      data: 'like'
    })
    window.alert("era")
  }

  $('.like').click(function(){
    func();
  });
</script>
