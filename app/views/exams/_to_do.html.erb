 <p id="notice"><%= notice %></p>
    <p>
      <strong>Title:</strong>
      <%= @exam.title %>
    </p>
      <% array = @exam.questions.map {|q| q.id}%>
      <%= array%>
      <br />
      <%= form_tag("/dones/teste", :method => "post") do %>
        <% for i in 0..@exam.questions.count-1 do %>
          <%= @exam.questions[i].pergunta %>
          <br />
          <% @exam.questions[i].answers.each do |answer|%>
           <span> <input type="radio" name="<%=i%>" value="<%=answer.id%>" %>
              <%=answer.resposta%> </span>
          <br />
          <% end %>
          <br />
        <% end %>
      <input type="hidden" name="prova_id" value="<%=@exam.id%>">
      <input type="hidden" name="all" value="teste">
      <%= submit_tag("Enviar") %>
      <% end %>