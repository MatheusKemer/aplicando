<% if user_signed_in? %>
  <% if current_user.type == "Teacher" %>
    <%= render 'teacher_exams', exams: @exams%>
  <% elsif current_user.type == "Admin" %>
    <%= render 'all_exams', exams: Exam.all %>
  <% else %>
    <%= render 'student_exams'%>
  <% end %>
<% else %>
  <h3> <%=I18n.t("exam.not_logged")%> </h3>
<% end %>