<% if user_signed_in? %>
  <% unless current_user.teacher? || current_user.admin?%>
	  <%# if @exam.students.map{|s| s.name}.include? Student.where(id: current_user.id).first.name%>
		<%if @exam.discipline.students.include? current_user %>
			 <%= render 'to_do', exam: @exam%>
		<% else %>
			<br />
			<%= I18n.t("exam.error.unavailable")%>
		<% end %>
	<% else %>
		<%= render 'show', exam: @exam%>
	<% end %>
<%else%>
  <h3> <%=I18n.t("exam.not_logged")%> </h3>
<%end%>